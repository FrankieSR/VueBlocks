{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*", "src/**/*.vue"],
    "exclude": ["node_modules", "dist", "tests"]
}
